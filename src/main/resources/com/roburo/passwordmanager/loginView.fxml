<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="200" prefWidth="300" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.roburo.passwordmanager.LoginController">

    <TextField fx:id="usernameField" promptText="Username or Email" />
    <PasswordField fx:id="passwordField" promptText="Master Password" />
    <Button onAction="#onLoginClick" text="Login" />
   <Button onAction="#onRegisterClick" text="Register" />
</VBox>
