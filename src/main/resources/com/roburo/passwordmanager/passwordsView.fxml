<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.roburo.passwordmanager.PasswordsController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: #f4f6f9;">

    <VBox spacing="10" alignment="TOP_CENTER" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">
        <Label text="Saved Credentials"
               style="-fx-font-size: 18px; -fx-text-fill: #333333; -fx-font-weight: bold;" />

        <ListView fx:id="credentialsList"
                  prefHeight="300"
                  style="-fx-background-radius: 10; -fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 10;" />

        <Button text="Back"
                onAction="#onBackClick"
                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 16;" />
    </VBox>

</AnchorPane>
